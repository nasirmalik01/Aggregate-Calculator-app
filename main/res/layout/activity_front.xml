<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/images33"
        android:weightSum="10">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Engineering Universites"
            android:textStyle="bold"
            android:id="@+id/tvengg"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#ffffff"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Medical Universities"
            android:textStyle="bold"
            android:id="@+id/tvmed"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#ffffff"

            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>